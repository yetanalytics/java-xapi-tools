<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>
  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
  <logger name="com.yetanalytics.xapi" level="DEBUG"/>
  <logger name="com.jayway.jsonpath" level="WARN"/>
  <logger name="org.testcontainers" level="WARN"/>
  <logger name="o.testcontainers" level="WARN"/>
  <!-- The following logger can be used for containers logs since 1.18.0 -->
  <logger name="tc" level="WARN"/>
  <logger name="com.github.dockerjava" level="WARN"/>
  <logger name="com.github.dockerjava.zerodep.shaded.org.apache.hc.client5.http.wire" level="ERROR"/>
</configuration>
